{
  "name": "simpletest-docs-ui",
  "description": "This project produces the UI for the SimpleTest documentation site.",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/simpletest/simpletest-docs-ui.git"
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "bundle": "npx gulp bundle",
    "format": "npx gulp format",
    "format:bundle": "npm run format && npm run bundle",
    "lint": "npx gulp lint",

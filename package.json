{
  "name": "simpletest-docs-ui",
  "description": "This project produces the UI for the SimpleTest documentation site.",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/simpletest/simpletest-docs-ui.git"
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "browserslist": ["last 2 versions"],
  "scripts": {
    "format:check": "npx @biomejs/biome format",
    "format:write": "npx @biomejs/biome format --write",
    "npm:audit": "npm audit --audit-level=high fix",
    "npm:outdated": "npm outdated",
    "npm:clean_install": "npm clean-install --no-audit --strict-peer-deps",
    "npm:install": "npm install --no-audit --strict-peer-deps",
    "npm:update": "npm update --no-audit --strict-peer-deps",
    "bundle": "npx gulp bundle",
    "format:bundle": "npm run format:write && npm run bundle",
    "live-preview": "LIVERELOAD=1 npx gulp preview",
    "preview": "npx gulp preview",
    "release": "npx gulp release",
    "clean": "rm -rf node_modules/",
    "reinstall": "npm run clean && npm install --legacy-peer-deps",
    "lint:all": "npm run lint:css && npm run lint:biome",
    "lint:css": "stylelint \"src/css/**/*.css\" --config .stylelintrc",
    "lint:biome": "npx @biomejs/biome check",
    "lint:css:fix": "stylelint \"src/css/**/*.css\" --fix --config .stylelintrc"
  },
  "devDependencies": {
    "@asciidoctor/core": "~3.0",
    "@biomejs/biome": "^1.2.0",
    "@fontsource/roboto": "~5.2",
    "@fontsource/roboto-mono": "~5.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@vscode/gulp-vinyl-zip": "~2.6",
    "autoprefixer": "~10.4",
    "browser-pack-flat": "~3.5",
    "browserify": "~17.0",
    "cssnano": "~7.1",
    "fancy-log": "~2.0",
    "fs-extra": "~11.3",
    "gulp": "~5.0",
    "gulp-concat": "~2.6",
    "gulp-connect": "^5.0.0",
    "gulp-imagemin": "^6.2.0",
    "gulp-newer": "~1.4",
    "gulp-postcss": "~10.0",
    "gulp-uglify": "~3.0",
    "handlebars": "~4.7",
    "highlight.js": "11.11.1",
    "js-yaml": "~4.1",
    "merge-stream": "~2.0",
    "postcss": "^8.5.6",
    "postcss-calc": "~10.1",
    "postcss-custom-properties": "~14.0",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^8.2.0",
    "postcss-url": "~10.1",
    "require-directory": "~2.1",
    "require-from-string": "~2.0",
    "stylelint": "~16.24",
    "stylelint-config-standard": "^39.0.0",
    "tailwindcss": "^4.1.12",
    "vinyl-fs": "~4.0"
  }
}

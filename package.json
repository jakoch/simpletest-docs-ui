    "release": "npx gulp release",
    "clean": "rm -rf node_modules/",
    "reinstall": "npm run clean && npm install",
    "audit:fix": "npm audit fix --force || true",
    "lint:css": "stylelint \"src/css/**/*.css\" --config .stylelintrc",
    "lint:css:fix": "stylelint \"src/css/**/*.css\" --fix --config .stylelintrc"
  },
